{{ 'customer.css' | asset_url | stylesheet_tag }}

{{ 'recharge.css' | asset_url | stylesheet_tag }}

<div class="dashboard-section">
  <div class="customer account">
    <div class="customer_page_cover"> 
      <div class="dashboard-leftsec">
        <div class="account-sidebar">
          {% include 'account-sidebar' %}
        </div>
      </div> 
      <div class="dashboard-rghtsec">
        <div class="account-wrapper">
          <div class="account-tabs">
            <div class="account-tab active">

              <div class="dashbrd-box">
                <div class="dashbrd-box myAccount mb-5">
                  <h2 class="user-name">Hi, {{ customer.first_name }} {{ customer.last_name }}</h2>
                  <p class="wc-txt1">Welcome to your account.</p>
                </div>


                <a href="{{ routes.account_logout_url }}">
                  <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" fill="none" viewBox="0 0 18 19">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill="currentColor">
                      </svg>{{ 'customer.log_out' | t }}</a>

                  </div>

              </div>

              <div class="account-tab" id="order-history">
                {% include 'account-order-list' %}
              </div>
              <div class="account-tab" id="profile-info">
                {% include 'account-profile-info' %}
              </div>
              <div class="account-tab" id="manage-subsciption">
                {% include 'account-manage-subsciption' %}
              </div>
              <div class="account-tab" id="loyalty-rewards">
                {% include 'account-loyalty-rewards' %}
              </div>
            </div>
          </div>
        </div>   
      </div>
    </div>
  </div>

  <style>
    .account-sidebar{
      
    }
    .account-sidebar-nav{
      
    }
    .account-wrapper{
      
    }
    .account-tabs .account-tab{
      display:none;
      transition:0.8s all;
    }
    .account-tabs .account-tab.active{
      display:block;
    }
  </style>
