{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
	{
      "type": "text",
      "id": "page_heading",
      "label": "Page Heading Text"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Contact form",
      "label": "Form Heading"
    }
  ],
	"blocks": [
		{
          "type": "heading",
          "name": "Left Block Sections",
          "limit": 6,
		  "settings": [
                {
                	"type": "image_picker",
                	"id": "icon_image",
                	"label": "Icon Image"        
                },
				{
                  	"type": "text",
                  	"id": "heading",
					"label": "Heading"
				},
				{
					"type": "richtext",
					"id": "sub-content",
					"label": "Sub Content text"
				},
				{
					"type": "checkbox",
					"id": "show_social",
					"label": "Show Social links",
					"default": false,
					"info": "check if you want to display social links, social links manage by theme settings."
				}
				
			]
        }
	],
    "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
